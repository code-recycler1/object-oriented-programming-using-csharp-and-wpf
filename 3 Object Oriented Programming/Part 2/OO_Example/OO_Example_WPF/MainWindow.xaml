<Window x:Class="OO_Example_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OO_Example_WPF"
        mc:Ignorable="d"
        Title="OO Example" Height="350" Width="525" Loaded="Window_Loaded">
    <!-- Main Grid Layout -->
    <Grid>
        <!-- Define Rows and Columns -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <!-- Row 0: Auto-sized -->
            <RowDefinition Height="auto" />
            <!-- Row 1: Auto-sized -->
            <RowDefinition Height="auto" />
            <!-- Row 2: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 3: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 4: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 5: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 6: Auto-sized -->
            <RowDefinition />
            <!-- Row 7: Takes remaining space -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!-- Column 0: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 1: Takes equal space -->
        </Grid.ColumnDefinitions>

        <!-- Labels and TextBoxes for User Input -->
        <Label x:Name="lblNumber" 
               Content="Number:" 
               Grid.Row="1" />
        <TextBox x:Name="txtNumber" 
                 Grid.Column="1" 
                 Grid.Row="1" 
                 Margin="5" />

        <Label x:Name="lblFirstName" 
               Content="First name:" 
               Grid.Row="2" />
        <TextBox x:Name="txtFirstName" 
                 Grid.Column="1" 
                 Grid.Row="2" 
                 Margin="5" />

        <Label x:Name="lblLastName"
               Content="Last name:" 
               Grid.Row="3" />
        <TextBox x:Name="txtLastName" 
                 Grid.Column="1" 
                 Grid.Row="3" 
                 Margin="5" />

        <!-- Save Button -->
        <Button x:Name="btnSave" 
                Content="Save" 
                Grid.Column="1" 
                Grid.Row="4" 
                Height="21" 
                Margin="5" 
                VerticalAlignment="Top" 
                Click="btnSave_Click" />

        <!-- ComboBox to Display Users -->
        <ComboBox x:Name="cmbUser" 
                  Grid.Row="5" 
                  Grid.ColumnSpan="2" 
                  Margin="10 20 10 0" />

        <!-- Buttons to Show Data and Clear Selection -->
        <Button x:Name="btnShowData" 
                Content="Show data"
                Grid.Row="6" 
                Margin="10 10 10 10" 
                Click="btnShowData_Click" />
        <Button x:Name="btnDelete" 
                Content="Delete"
                Grid.Column="1"
                Grid.Row="6" 
                Margin="10 10 10 10" 
                Click="btnDelete_Click" />

        <!-- Label to Display Results -->
        <Label x:Name="lblResult" 
               Content="Result.."
               Grid.Row="7" 
               Grid.ColumnSpan="2" />
    </Grid>
</Window>