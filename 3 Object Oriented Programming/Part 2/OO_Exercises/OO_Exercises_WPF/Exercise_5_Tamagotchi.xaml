<Window x:Class="OO_Exercises_WPF.Exercise_5_Tamagotchi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OO_Exercises_WPF"
        mc:Ignorable="d"
        Title="Exercise 5 - Tamagotchi" Height="350" Width="525">
    <!-- Main Grid Layout -->
    <Grid>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Row 0: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 1: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 2: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 3: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 4: Auto-sized -->
            <RowDefinition />
            <!-- Row 5: Takes remaining space -->
        </Grid.RowDefinitions>
        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!-- Column 0: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 1: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 2: Takes equal space -->
        </Grid.ColumnDefinitions>

        <!-- Create Tamagotchi Section -->
        <Label x:Name="lblCreate" 
               Content="Create a Tamagotchi" 
               Grid.ColumnSpan="3" 
               VerticalAlignment="Center" 
               HorizontalAlignment="Left" 
               FontWeight="Bold" />
        <Label x:Name="lblName" 
               Content="Name" 
               Grid.Row="1" />
        <TextBox x:Name="txtName" 
                 Grid.Column="1" 
                 Grid.Row="1" 
                 Margin="10" />
        <Button x:Name="btnCreate" 
                Content="Create" 
                Grid.Row="1" 
                Grid.Column="2" 
                Margin="10" 
                Click="btnCreate_Click" />

        <!-- Tamagotchi Name and Pet Button -->
        <Label x:Name="lblTamagotchiName" 
               Grid.Row="2" 
               Grid.Column="1" 
               Margin="10" />
        <Button x:Name="btnPet" 
                Content="Pet Tamagotchi" 
                Grid.Row="2"
                Grid.Column="2" 
                Height="Auto" 
                Margin="10" 
                Click="btnPet_Click" />

        <!-- Feed Section -->
        <TextBox x:Name="txtFoodUnits" 
                 Grid.Column="1"
                 Grid.Row="3" 
                 Margin="10" />
        <Label x:Name="lblFood" 
               Content="Units" 
               Grid.Row="3" 
               Margin="10" 
               HorizontalAlignment="Right" />
        <Button x:Name="btnFeed" 
                Content="Feed" 
                Grid.Row="3" 
                Grid.Column="2"
                Margin="10" 
                Click="btnFeed_Click" />

        <!-- Punish Section -->
        <TextBox x:Name="txtPunishUnits" 
                 Grid.Column="1"
                 Grid.Row="4" 
                 Margin="10" />
        <Label x:Name="lblPunish" 
               Content="Units" 
               Grid.Row="4" 
               Margin="10" 
               HorizontalAlignment="Right" />
        <Button x:Name="btnPunish" 
                Content="Punish" 
                Grid.Row="4" 
                Grid.Column="2" 
                Margin="10" 
                Click="btnPunish_Click" />

        <!-- Feeling Section -->
        <TextBox x:Name="txtAnswer" 
                 Grid.Row="5" 
                 Grid.ColumnSpan="2"
                 Margin="10" 
                 TextWrapping="Wrap"
                 AcceptsReturn="True" />
        <Button x:Name="btnFeeling" 
                Content="?" 
                Grid.Row="5" 
                Grid.Column="2" 
                Margin="10" 
                Click="btnFeeling_Click" />
    </Grid>
</Window>