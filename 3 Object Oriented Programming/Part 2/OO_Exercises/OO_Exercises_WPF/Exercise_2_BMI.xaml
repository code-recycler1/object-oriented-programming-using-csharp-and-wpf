<Window x:Class="OO_Exercises_WPF.Exercise_2_BMI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OO_Exercises_WPF"
        mc:Ignorable="d"
        Title="Exercise 2 - BMI" Height="250" Width="525">
    <!-- Main Grid Layout -->
    <Grid>
        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!-- Column 0: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 1: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 2: Takes equal space -->
        </Grid.ColumnDefinitions>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <!-- Row 0: Auto-sized -->
            <RowDefinition Height="auto" />
            <!-- Row 1: Auto-sized -->
            <RowDefinition Height="auto" />
            <!-- Row 2: Auto-sized -->
            <RowDefinition Height="auto" />
            <!-- Row 3: Auto-sized -->
            <RowDefinition Height="auto" />
            <!-- Row 4: Auto-sized -->
        </Grid.RowDefinitions>

        <!-- Labels and TextBoxes for User Input -->
        <Label x:Name="lblName" 
               Content="Name" 
               Grid.Row="0" 
               Grid.Column="0" 
               Height="auto" 
               Margin="5" />
        <TextBox x:Name="txtName" 
                 Grid.Column="1" 
                 Margin="5" />

        <Label x:Name="lblWeight" 
               Content="Weight (kg)"
               Grid.Row="1" 
               Grid.Column="0" 
               Height="auto" 
               Margin="5" />
        <TextBox x:Name="txtWeight" 
                 Grid.Row="1" 
                 Grid.Column="1" 
                 Margin="5" />

        <Label x:Name="lblLength" 
               Content="Length (m)" 
               Grid.Row="2" 
               Margin="5" />
        <TextBox x:Name="txtLength"
                 Grid.Column="1" 
                 Grid.Row="2" 
                 Margin="5" />

        <!-- Calculate Button -->
        <Button x:Name="btnCalculate" 
                Content="Calculate" 
                Grid.Column="2" 
                Grid.RowSpan="3" 
                Margin="5" 
                Click="btnCalculate_Click" />

        <!-- Labels to Display Results -->
        <Label x:Name="lblResult" 
               Content="Result.." 
               Grid.Row="3" 
               Grid.ColumnSpan="3"
               Margin="5" />
        <Label x:Name="lblBMI" 
               Content="BMI.." 
               Grid.Row="4" 
               Grid.ColumnSpan="3" 
               Margin="5" />
    </Grid>
</Window>