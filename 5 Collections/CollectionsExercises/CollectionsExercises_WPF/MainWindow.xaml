<Window x:Class="CollectionsExercises_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionsExercises_WPF"
        mc:Ignorable="d"
        Title="Collections Exercises" Height="160" Width="400">
    <!-- Main container for the buttons -->
    <StackPanel>
        <!-- Button to open the exercise 1 window -->
        <Button Content="Exercise 1 - Animals" 
                x:Name="btnExercise_1_Animals"
                Margin="5" 
                Click="btnExercise_1_Animals_Click"/>

        <!-- Button to open the exercise 2 window -->
        <Button Content="Exercise 2 - Prime Minister" 
                x:Name="btnExercise_2_Prime_Minister" 
                Margin="5" 
                Click="btnExercise_2_Prime_Minister_Click"/>

        <!-- Button to open the exercise 3 window -->
        <Button Content="Exercise 3 - Students with Results" 
                x:Name="btnExercise_3_Students_with_Results" 
                Margin="5" 
                Click="btnExercise_3_Students_with_Results_Click"/>

        <!-- Button to close the application -->
        <Button Content="Close" 
                x:Name="btnClose" 
                Margin="5" 
                Click="btnClose_Click"/>
    </StackPanel>
</Window>
