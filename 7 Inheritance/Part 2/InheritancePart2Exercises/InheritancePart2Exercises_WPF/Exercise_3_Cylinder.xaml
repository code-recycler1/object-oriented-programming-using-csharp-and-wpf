<Window x:Class="InheritancePart2Exercises_WPF.Exercise_3_Cylinder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InheritancePart2Exercises_WPF"
        mc:Ignorable="d"
        Title="Exercise 3 - Cylinder" Height="450" Width="450" Loaded="Window_Loaded">
    <Grid>
        <!-- Define rows and columns for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- X Input -->
            <RowDefinition Height="auto"/>
            <!-- Y Input -->
            <RowDefinition Height="auto"/>
            <!-- R Input -->
            <RowDefinition Height="auto"/>
            <!-- H Input -->
            <RowDefinition Height="auto"/>
            <!-- Result Label -->
            <RowDefinition Height="auto"/>
            <!-- ListBox and Show Button -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <!-- Labels -->
            <ColumnDefinition/>
            <!-- TextBoxes -->
            <ColumnDefinition Width="auto"/>
            <!-- Buttons -->
        </Grid.ColumnDefinitions>

        <!-- X Input -->
        <Label x:Name="lblX" 
               Content="X" 
               Margin="5" 
               Grid.Row="0" 
               Grid.Column="0"/>
        <TextBox x:Name="txtX" 
                 Width="50" 
                 Margin="5" 
                 Grid.Row="0" 
                 Grid.Column="1"/>

        <!-- Y Input -->
        <Label x:Name="lblY" 
               Content="Y" 
               Margin="5" 
               Grid.Row="1" 
               Grid.Column="0"/>
        <TextBox x:Name="txtY"
                 Width="50"
                 Margin="5" 
                 Grid.Row="1"
                 Grid.Column="1"/>

        <!-- R Input -->
        <Label x:Name="lblR" 
               Content="R" 
               Margin="5" 
               Grid.Row="2" 
               Grid.Column="0"/>
        <TextBox x:Name="txtR"
                 Width="50"
                 Margin="5" 
                 Grid.Row="2" 
                 Grid.Column="1"/>

        <!-- H Input -->
        <Label x:Name="lblH" 
               Content="H"
               Margin="5" 
               Grid.Row="3" 
               Grid.Column="0"/>
        <TextBox x:Name="txtH"
                 Width="50" 
                 Margin="5" 
                 Grid.Row="3" 
                 Grid.Column="1"/>

        <!-- Buttons for Creating Objects -->
        <Button x:Name="btnPoint"
                Content="Test Point"
                Margin="5" 
                Grid.Row="1" 
                Grid.Column="2"
                Click="btnPoint_Click"/>
        <Button x:Name="btnCircle"
                Content="Test Circle"
                Margin="5" 
                Grid.Row="2" 
                Grid.Column="2" 
                Click="btnCircle_Click"/>
        <Button x:Name="btnCylinder"
                Content="Test Cylinder"
                Margin="5" 
                Grid.Row="3" 
                Grid.Column="2" 
                Click="btnCylinder_Click"/>

        <!-- Result Label -->
        <Label x:Name="lblResult" 
               Content="Result.."
               Margin="5" 
               Grid.Row="4" 
               Grid.Column="0" 
               Grid.ColumnSpan="3"/>

        <!-- ListBox to Display Objects -->
        <ListBox x:Name="lstForms"
                 Grid.Row="5" 
                 Grid.ColumnSpan="2" 
                 Margin="10"/>
        <Button x:Name="btnShow" 
                Content="Show" 
                Grid.Row="5" 
                Grid.Column="2" 
                Margin="10" 
                Click="btnShow_Click"/>
    </Grid>
</Window>