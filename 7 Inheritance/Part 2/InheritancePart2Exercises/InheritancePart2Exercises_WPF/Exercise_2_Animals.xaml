<Window x:Class="InheritancePart2Exercises_WPF.Exercise_2_Animals"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InheritancePart2Exercises_WPF"
        mc:Ignorable="d"
        Title="Exercise 2 - Animals" Height="600" Width="525" Loaded="Window_Loaded">
    <Grid>
        <!-- Define rows and columns for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Animal Type Selection -->
            <RowDefinition Height="2*"/>
            <!-- List of Animals -->
            <RowDefinition Height="2*"/>
            <!-- Questions List -->
            <RowDefinition />
            <!-- Buttons -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <!-- Animal Type Selection -->
            <ColumnDefinition/>
            <!-- Name Input and Create Button -->
            <ColumnDefinition/>
            <!-- Talk Button -->
        </Grid.ColumnDefinitions>

        <!-- GroupBox for Animal Type Selection -->
        <GroupBox x:Name="groupBox" 
                  Header="Animals" 
                  Margin="10">
            <StackPanel Margin="5" 
                        VerticalAlignment="Center">
                <RadioButton x:Name="rbCat" 
                             Content="Cat" 
                             Margin="5"/>
                <RadioButton x:Name="rbParrot" 
                             Content="Parrot" 
                             Margin="5"/>
                <RadioButton x:Name="rbHuman" 
                             Content="Human" 
                             Margin="5"/>
            </StackPanel>
        </GroupBox>

        <!-- Name Input and Create Button -->
        <StackPanel Grid.Column="1" 
                    Margin="10">
            <Label x:Name="lblName" 
                   Content="Give your 'animal' a name!" 
                   HorizontalAlignment="Center"/>
            <TextBox x:Name="txtName"/>
            <Button x:Name="btnCreate" 
                    Content="Create" 
                    Margin="0 10 0 0" 
                    Click="btnCreate_Click"/>
        </StackPanel>

        <!-- ListBox to Display Animals -->
        <ListBox x:Name="lstAnimals" 
                 Grid.Row="1" 
                 Grid.ColumnSpan="3" 
                 Margin="10"/>

        <!-- Questions List and Talk Button -->
        <StackPanel Grid.Row="2" 
                    Grid.ColumnSpan="2" 
                    Margin="10">
            <Label x:Name="lblTalkSentence" 
                   Content="Choose a sentence to talk:" 
                   HorizontalAlignment="Center"/>
            <ListBox x:Name="lstQuestions" 
                     Height="115"/>
        </StackPanel>
        <Button x:Name="btnTalk" 
                Content="Talk" 
                Height="30" 
                Grid.Row="2" 
                Grid.Column="2" 
                Margin="10,36,10,0" 
                VerticalAlignment="Top"
                Click="btnTalk_Click"/>

        <!-- Buttons for Caress, Eat, and Close -->
        <Button x:Name="btnCaress" 
                Content="Caress" 
                Grid.Row="3" 
                Margin="10" 
                Click="btnCaress_Click"/>
        <Button x:Name="btnEat"
                Content="Eat" 
                Grid.Row="3" 
                Grid.Column="1" 
                Margin="10" 
                Click="btnEat_Click"/>
        <Button x:Name="btnClose" 
                Content="Close" 
                Grid.Row="3" 
                Grid.Column="2" 
                Margin="10" 
                Click="btnClose_Click"/>
    </Grid>
</Window>