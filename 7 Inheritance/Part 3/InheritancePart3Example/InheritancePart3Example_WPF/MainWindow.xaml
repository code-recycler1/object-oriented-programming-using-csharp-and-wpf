<Window x:Class="InheritancePart3Example_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InheritancePart3Example_WPF"
        mc:Ignorable="d"
        Title="Inheritance Part 3 Example" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <!-- Define rows and columns for layout -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Radio Buttons -->
            <RowDefinition Height="auto"/>
            <!-- Number -->
            <RowDefinition Height="auto"/>
            <!-- First Name -->
            <RowDefinition Height="auto"/>
            <!-- Last Name -->
            <RowDefinition Height="auto"/>
            <!-- Salary -->
            <RowDefinition Height="auto"/>
            <!-- Scholarship Checkbox -->
            <RowDefinition Height="auto"/>
            <!-- Add Button -->
            <RowDefinition Height="auto"/>
            <!-- ComboBox -->
            <RowDefinition/>
            <!-- Result Label -->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <!-- Labels -->
            <ColumnDefinition/>
            <!-- TextBoxes and Buttons -->
        </Grid.ColumnDefinitions>

        <!-- Radio Buttons for User Type Selection -->
        <WrapPanel Orientation="Horizontal" 
                   Grid.Row="0" 
                   Grid.Column="0" 
                   Grid.ColumnSpan="2">
            <RadioButton x:Name="rbUser" 
                         Content="User" 
                         Margin="10" 
                         Checked="rbUser_Checked"/>
            <RadioButton x:Name="rbTeacher" 
                         Content="Teacher" 
                         Margin="10"
                         Checked="rbTeacher_Checked"/>
            <RadioButton x:Name="rbStudent"
                         Content="Student" 
                         Margin="10" 
                         Checked="rbStudent_Checked"/>
        </WrapPanel>

        <!-- Number Input -->
        <Label x:Name="lblNumber" 
               Content="Number" 
               Grid.Row="1"/>
        <TextBox x:Name="txtNumber" 
                 Grid.Row="1" 
                 Grid.Column="1"
                 Margin="10"/>

        <!-- First Name Input -->
        <Label x:Name="lblFirstName" 
               Content="First name"
               Grid.Row="2"/>
        <TextBox x:Name="txtFirstName" 
                 Grid.Column="1" 
                 Grid.Row="2" 
                 Margin="10"/>

        <!-- Last Name Input -->
        <Label Content="Last name" 
               Grid.Row="3"/>
        <TextBox x:Name="txtLastName" 
                 Grid.Column="1" 
                 Grid.Row="3" 
                 Margin="10"/>

        <!-- Salary Input (Visible for Teacher) -->
        <Label x:Name="lblSalary" 
               Content="Salary"
               Grid.Row="4" 
               Visibility="Hidden"/>
        <TextBox x:Name="txtSalary"
                 Grid.Column="1" 
                 Grid.Row="4" 
                 Margin="10" 
                 Visibility="Hidden"/>

        <!-- Scholarship Checkbox (Visible for Student) -->
        <CheckBox x:Name="cbScholarship"
                  Content="Scholarship"
                  Grid.Row="5" 
                  Margin="10"
                  HorizontalAlignment="Left" 
                  VerticalAlignment="Bottom" 
                  Visibility="Hidden"/>

        <!-- Add Button -->
        <Button x:Name="btnAdd" 
                Content="Add" 
                Grid.Row="5" 
                Grid.Column="1" 
                Margin="10" 
                Click="btnAdd_Click"/>

        <!-- ComboBox to Display Users -->
        <ComboBox x:Name="cmbUsers"
                  Grid.Row="6"
                  Grid.ColumnSpan="2" 
                  Margin="10" 
                  SelectionChanged="cmbUsers_SelectionChanged"/>

        <!-- Label to Display Selected User Details -->
        <Label x:Name="lblResult" 
               Content="Result.." 
               Grid.Row="7" 
               Grid.RowSpan="2" 
               Grid.ColumnSpan="2"/>
    </Grid>
</Window>