<Window x:Class="WPF_Start_examples.FrmStackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Start_examples"
        mc:Ignorable="d"
        Title="FrmStackPanel" Height="200" Width="525">
    <!-- StackPanel to arrange buttons vertically -->
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch">
        <!-- Red button -->
        <Button x:Name="btnRed"  
                Margin="10" 
                Content="Red" 
                Foreground="Red" 
                Click="btnRed_Click"/>

        <!-- Green button -->
        <Button x:Name="btnGreen" 
                Margin="10" 
                Content="Green" 
                Foreground="Green" 
                Click="btnGreen_Click"/>

        <!-- Blue button -->
        <Button x:Name="btnBlue" 
                Margin="10" 
                Content="Blue" 
                Foreground="Blue" 
                Click="btnBlue_Click"/>

        <!-- Close button -->
        <Button x:Name="btnClose" 
                Margin="10" 
                Content="Close" 
                Click="btnClose_Click"/>
    </StackPanel>
</Window>
