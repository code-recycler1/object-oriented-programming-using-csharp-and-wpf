<Window x:Class="WPF_Start_exercises.Exercise_2_Circle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Start_exercises"
        mc:Ignorable="d"
        Title="Exercise 2 - Circle" Height="260" Width="800">
    <!-- Main container for the UI elements -->
    <StackPanel Orientation="Vertical">
        <!-- Horizontal stack panel for the radius input -->
        <StackPanel Orientation="Horizontal">
            <!-- Label for the radius input -->
            <Label x:Name="lblRadius" 
                   Content="Radius" 
                   Height="40" 
                   Margin="10" 
                   FontSize="15"/>

            <!-- Text box for entering the radius -->
            <TextBox x:Name="txtRadius" 
                     Height="40" 
                     Width="700" 
                     BorderBrush="Black" 
                     BorderThickness="1" 
                     Margin="10"/>
        </StackPanel>

        <!-- Button to trigger the calculation -->
        <Button x:Name="btnCalculate" 
                Content="Calculate" 
                Height="40" 
                Margin="10" 
                Click="btnCalculate_Click" />

        <!-- Label to display the results or error messages -->
        <Label x:Name="lblMessage" 
               FontFamily="Courier New"
               Height="100"
               Margin="10"/>
    </StackPanel>
</Window>