<Window x:Class="UnitTestingExercises_WPF.Exercise_2_Train"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitTestingExercises_WPF"
        mc:Ignorable="d"
         Title="Exercise 2 - Train" Height="350" Width="525" Loaded="Window_Loaded">
    <!-- Main Grid Layout -->
    <Grid>
        <!-- Define Rows -->
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Row 0: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 1: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 2: Auto-sized -->
            <RowDefinition Height="auto"/>
            <!-- Row 3: Auto-sized -->
            <RowDefinition Height="10px"/>
            <!-- Row 4: Small spacer -->
            <RowDefinition Height="auto"/>
            <!-- Row 5: Auto-sized -->
            <RowDefinition />
            <!-- Row 6: Takes remaining space -->
        </Grid.RowDefinitions>
        <!-- Define Columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <!-- Column 0: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 1: Takes equal space -->
            <ColumnDefinition />
            <!-- Column 2: Takes equal space -->
        </Grid.ColumnDefinitions>

        <!-- Embark Section -->
        <Label x:Name="lblEmbark" 
               Content="Embark:" 
               Margin="5" />
        <TextBox x:Name="txtEmbark" 
                 Grid.Column="1" 
                 Margin="5" />
        <Button x:Name="btnEmbark" 
                Content="Embark" 
                Grid.Column="2" 
                Margin="5" 
                Click="btnEmbark_Click" />

        <!-- Disembark Section -->
        <Label x:Name="lblDisembark" 
               Content="Disembark:" 
               Grid.Row="1" 
               Margin="5" />
        <TextBox x:Name="txtDisembark" 
                 Grid.Column="1"
                 Grid.Row="1" 
                 Margin="5" />
        <Button x:Name="btnDisembark" 
                Content="Disembark" 
                Grid.Column="2"
                Grid.Row="1" 
                Margin="5"
                Click="btnDisembark_Click"/>

        <!-- Accelerate Section -->
        <Label x:Name="lblAccelerate"
               Content="Accelerate:"
               Grid.Row="2" 
               Margin="5" />
        <TextBox x:Name="txtAccelerate" 
                 Grid.Column="1" 
                 Grid.Row="2" 
                 Margin="5" />
        <Button x:Name="btnAccelerate" 
                Content="Accelerate" 
                Grid.Column="2" 
                Grid.Row="2" 
                Margin="5" 
                Click="btnAccelerate_Click" />

        <!-- Decelerate Section -->
        <Label x:Name="lblDecelerate" 
               Content="Decelerate:" 
               Grid.Row="3" 
               Margin="5" />
        <TextBox x:Name="txtDecelerate"
                 Grid.Column="1" 
                 Grid.Row="3" 
                 Margin="5" />
        <Button x:Name="btnDecelerate"
                Content="Decelerate"
                Grid.Column="2" 
                Grid.Row="3" 
                Margin="5" 
                Click="btnDecelerate_Click" />

        <!-- Stop and Close Doors Buttons -->
        <Button x:Name="btnStop" 
                Content="Stop" 
                Grid.Column="0" 
                Grid.Row="5" 
                Margin="5" 
                Click="btnStop_Click" />
        <Button x:Name="btnCloseDoors" 
                Content="Close doors"
                Grid.Column="1"
                Grid.Row="5" 
                Margin="5" 
                Click="btnCloseDoors_Click" />

        <!-- Summary TextBox -->
        <TextBox x:Name="txtSummary" 
                 Grid.Column="0"
                 Grid.Row="6" 
                 Grid.ColumnSpan="3"
                 Margin="5" />
    </Grid>
</Window>
