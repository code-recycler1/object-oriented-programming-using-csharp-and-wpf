<Window x:Class="UnitTestingExercises_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UnitTestingExercises_WPF"
        mc:Ignorable="d"
        Title="Unit Testing Exercises" Height="160" Width="400">
    <!-- Main container for the buttons -->
    <StackPanel>
        <!-- Button to open the exercise 1 window -->
        <Button Content="Exercise 1 - Swimming Pool" 
                x:Name="btnExercise_1_Swimming_Pool" 
                Margin="5" 
                Click="btnExercise_1_Swimming_Pool_Click" />

        <!-- Button to open the exercise 2 window -->
        <Button Content="Exercise 2 - Train" 
                x:Name="btnExercise_2_Train" 
                Margin="5"
                Click="btnExercise_2_Train_Click" />

        <!-- Button to open the exercise 3 window -->
        <Button Content="Exercise 3 - Tamagotchi" 
                x:Name="btnExercise_3_Tamagotchi" 
                Margin="5"
                Click="btnExercise_3_Tamagotchi_Click"/>

        <!-- Button to close the application -->
        <Button Content="Close" 
                x:Name="btnClose" 
                Margin="5" 
                Click="btnClose_Click"/>
    </StackPanel>
</Window>
