<Window x:Class="CollectionsAndOOExercises_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CollectionsAndOOExercises_WPF"
        mc:Ignorable="d"
        Title="Collections and OO Exercises" Height="160" Width="400">
    <!-- Main container for the buttons -->
    <StackPanel>
        <!-- Button to open the exercise 1 window -->
        <Button Content="Exercise 1 - Television" 
                x:Name="btnExercise_1_Television"
                Margin="5" 
                Click="btnExercise_1_Television_Click"/>

        <!-- Button to open the exercise 2 window -->
        <Button Content="Exercise 2 - Trainee" 
                x:Name="btnExercise_2_Trainee" 
                Margin="5" 
                Click="btnExercise_2_Trainee_Click"/>

        <!-- Button to open the exercise 3 window -->
        <Button Content="Exercise 3 - Shopping Cart" 
                x:Name="btnExercise_3_Shopping_Cart" 
                Margin="5" 
                Click="btnExercise_3_Shopping_Cart_Click"/>

        <!-- Button to close the application -->
        <Button Content="Close" 
                x:Name="btnClose" 
                Margin="5" 
                Click="btnClose_Click"/>
    </StackPanel>
</Window>
